@using TravelApi.Models

@model List<TravelApi.Models.Review>
  <h1>Review</h1>

  @if(Model.Any())
  {
  <ul>
    @foreach(Review review in Model)
    {
      <li>@Html.ActionLink($"{review.Author}", "Details", new {id = review.ReviewId})</li>
    }
  </ul>
  }
  else
  {
    <p>no reviews</p>
  }
<p>@Html.ActionLink("Add Review", "Create")</p>
<p>@Html.ActionLink("Back", "Index", "Home")</p>